{
    "compilerOptions": {
        "target": "es2016",
        "module": "NodeNext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "baseUrl": "./",
        "outDir": "./dist",
        "types": ["node", "express"],
        "paths": {
            "#*": ["./*.js"],
            "#prisma/*": ["./prisma/*.js"],
            "#controllers/*": ["./app/controllers/*.js"],
            "#exceptions/*": ["./app/exceptions/*.js"],
            "#mails/*": ["./app/mails/*.js"],
            "#middleware/*": ["./app/middleware/*.js"],
            "#validators/*": ["./app/validators/*.js"],
            "#routers/*": ["./app/routers/*.js"],
            "#utils/*": ["./app/utils/*.js"]
        }
    }
}

{
    "compilerOptions": {
        "target": "es2016",
        "module": "NodeNext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "baseUrl": "./app",
        "outDir": "./dist",
        "types": ["node", "express"],
        "paths": {
            "#controllers/*": ["./app/controllers/*.js"],
            "#exceptions/*": ["./exceptions/*.js"],
            "#middleware/*": ["./middleware/*.js"],
            "#validators/*": ["./validators/*.js"],
            "#routers/*": ["./routers/*.js"]
        }
    }
}
